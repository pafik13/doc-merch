{% extends 'nav.html.twig' %}

{% block title %}{{ subcategory.name }} / Информация о подгруппе{% endblock %}

{% set page = 'subcategories' %}

{% block main %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> Информация о подгруппе </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ subcategory.name }}</div>
                <div class="panel-body">
                    <p>
                        <strong>Название:</strong> {{ subcategory.name }}<br>
                        <strong>Группа:</strong> {{ subcategory.category.name }}<br>
                    </p>
                    <a class="btn btn-default btn-lg btn-block" href="{{ path('subcategories_edit', {'id': subcategory.id}) }}">Редактировать</a>
                    <p></p>
                    <a class="btn btn-default btn-lg btn-block" href="{{ path('presentations') }}">Вернуться к списку</a>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}