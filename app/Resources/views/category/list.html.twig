{% extends 'nav.html.twig' %}

{% block title %}Группы{% endblock %}

{% set page = 'categories' %}

{% block main %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> Список групп </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Группы</div>
                <div class="panel-body">
                    <div class="checkbox text-right">
                    </div>
                    <div class="table-responsive">
                        <table id="categories" class="table">
                            <thead><tr>
                                <th>#</th>
                                <th>Название</th>
                                <th></th>
                            </tr></thead>
                            <tbody>
                            {% if categories|length > 0 %}
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ category.getName() }}</td>
                                        <td><a href="categories/{{ category.id }}">Информация</a>
                                            <br><a href="categories/edit/{{ category.id }}">Редактировать</a>
                                            <br>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr><td colspan="8" style="text-align: center;">"В базе нет ни одной группы. Вы можете добавить группу, нажав на кнопку \"Добавить группу\" ниже."</td></tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                    <a class="btn btn-default btn-lg btn-block" href="categories/add">Добавить группу</a>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
