{% extends 'nav.html.twig' %}

{% block title %}Редактировать представителя{% endblock %}

{% set page = 'presenters' %}

{% block main %}
	{% form_theme edit_form with 'bootstrap_3_layout.html.twig' %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> Редактировать представителя </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Изменение информации о представителе</div>
				<div class="panel-body">
					{{ form(edit_form) }}
					<a class="btn btn-default btn-lg btn-block" href="{{ path('presenters') }}">Вернуться назад</a>
				</div>
			</div>
		</div>
        <!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Удаление представителя</div>
				<div class="panel-body">
					<p>Будьте внимательны: данное действие необратимо.</p>
					{{ form(delete_form) }}
					<p></p>
					<a class="btn btn-default btn-lg btn-block" href="{{ path('presenters') }}">Вернуться назад</a>
				</div>
			</div>
		</div>
        <!-- /.col-lg-12 -->
	</div>
{% endblock %}