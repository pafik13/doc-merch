{% macro list(name, error) %}
	<table class="table">
		<thead><tr><th>#</th><th>Имя пользователя</th><th>Полное имя (ФИО)</th><th>E-mail</th><th>Пол</th><th>Дата рождения</th><th>Округ работы</th><th>Действия</th></tr></thead>
		<tbody>
			{% if name|length > 0 %}
				{% for user in name %}
					<tr><td>{{ loop.index }}</td><td>{{ user.username }}</td><td>{{ user.fullname == NULL ? 'Не указано' : user.fullname }}</td><td>{{ user.email }}</td><td>{% if user.gender == 'm' %}Мужской{% elseif user.gender == 'f' %}Женский{% else %}Не указан{% endif %}</td><td>{{ user.birthday == NULL ? 'Не указана' : user.birthday|date("d.m.Y") }}</td><td>{{ user.district == NULL ? 'Не указано' : user.district }}</td><td><a href="presenters/{{ user.id }}">Редактировать</a></td></tr>
				{% endfor %}
			{% else %}
				<tr><td colspan="8" style="text-align: center;">{{ error }}</td></tr>
			{% endif %}
		</tbody>
	</table>
{% endmacro %}