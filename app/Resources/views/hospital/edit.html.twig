{% extends 'nav.html.twig' %}
{% block stylesheets %}
    {{ parent() }}

    {% stylesheets 'bundles/app/css/modal.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% stylesheets 'bundles/app/css/form_with_map.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    <script src="http://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
{% endblock %}
{% block title %}Редактировать лечебно-профилактическое учреждение{% endblock %}

{% set page = 'hospitals' %}

{% block main %}
    {% form_theme edit_form with 'bootstrap_3_layout.html.twig' %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> Редактировать лечебно-профилактическое учреждение </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Изменение информации о лечебно-профилактическом учреждении</div>
                <div class="panel-body">
                    {{ form_start(edit_form,{'attr':{'class':'js-form-address'}}) }}
                    {{ form_row(edit_form.fullName) }}
                    {{ form_row(edit_form.territory) }}
                    <!-- Button trigger modal -->
                    <div class="form-group">
                        <a href="#" id="address-button" class="btn btn-default" data-toggle="modal" data-target="#myModal">
                            {% if edit_form.vars.value.address == NULL %}Добавить адрес
                            {% else %}Изменить адрес{% endif %}
                        </a>
                    </div>
                    <div class="hidden">
                        {{ form_row(edit_form.latitude,{'attr':{'class':'latitude address-field'}}) }}
                        {{ form_row(edit_form.longitude,{'attr':{'class':'longitude address-field'}}) }}
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close-address-button close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <div class="address row">
                                        <div class="col-lg-6">
                                            {{ form_row(edit_form.shortName,{'attr':{'class':'address-field'}}) }}
                                            {{ form_row(edit_form.ka_region,{'attr':{'class':'ka-region address-field'}}) }}
                                            {{ form_row(edit_form.ka_district,{'attr':{'class':'ka-district address-field'}}) }}
                                            {{ form_row(edit_form.ka_city,{'attr':{'class':'ka-city address-field'}}) }}
                                            {{ form_row(edit_form.ka_street,{'attr':{'class':'ka-street address-field'}}) }}
                                            {{ form_row(edit_form.ka_building,{'attr':{'class':'ka-building address-field'}}) }}
                                            {{ form_row(edit_form.address,{'attr':{'class':'value full-address address-field'}}) }}

                                            {#<p class="title">Текстовое представление адреса</p>#}
                                            {#<input type="text" class="value full-address form-control">#}

                                            {#<p class="title">Координаты</p>#}
                                            {#<input type="text" class="gps-position form-control">#}
                                        </div>
                                        <div class="col-lg-6">
                                            <div id="map" class="panel-map"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Сохранить</button>
                                    <button type="button" class="close-address-button btn btn-default" data-dismiss="modal">Закрыть</button>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                    <!-- /.modal -->
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Удаление лечебно-профилактического учреждения</div>
                <div class="panel-body">
                    <p>Будьте внимательны: данное действие необратимо.</p>
                    {{ form(delete_form) }}
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <a class="btn btn-default btn-lg btn-block" href="{{ path('hospitals') }}">Вернуться к списку</a>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts '@AppBundle/Resources/public/js/form_with_map.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}