{% extends 'nav.html.twig' %}

{% block title %}Редактировать презентацию{% endblock %}

{% set page = 'presentation_edit' %}

{% block main %}
    {% form_theme edit_form with 'bootstrap_3_layout.html.twig' %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> Редактировать презентацию </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Изменение информации о презентации</div>
                <div class="panel-body">
                    {{ form_start(edit_form) }}
                    {{ form_row(edit_form.name) }}
                    {{ form_row(edit_form.template) }}
                    {% include '/presentation/templates/template.html.twig' %}
                    <button id= "submit-form-btn" type="button" class="btn btn-default btn-lg btn-block">Изменить</button>
                    {{ form_end(edit_form) }}

                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Удаление презентации</div>
                <div class="panel-body">
                    <p>Будьте внимательны: данное действие необратимо.</p>
                    {{ form(delete_form) }}
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <a class="btn btn-default btn-lg btn-block" href="{{ path('presentations') }}">Вернуться к списку</a>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    {% javascripts '@AppBundle/Resources/public/js/template.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}