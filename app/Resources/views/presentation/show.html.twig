{% extends 'nav.html.twig' %}

{% block title %}{{ presentation.name }} / Информация о презентации{% endblock %}

{% set page = 'presentations' %}

{% block main %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> Информация о презентации </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ presentation.name }}</div>
                <div class="panel-body">
                    <p><strong>Название:</strong> {{ presentation.name }}</p>
                    <p><strong>Шаблон:</strong> {{ presentation.template }}</p>
                    <p><strong>Создатель:</strong> {{ presentation.author.username }}</p>
                    <p><strong>Дата создания:</strong> {{ presentation.date.format('Y-m-d H:i:s') }}</p>
                    <p><strong>Группы:</strong></p>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead><tr>
                                <th>#</th>
                                <th>Название</th>
                            </tr></thead>
                            <tbody>
                            {% if presentation.categories|length > 0 %}
                                {% for category in presentation.categories %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ category.getName() }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr><td colspan="8" style="text-align: center;">"Нет ни одной группы."</td></tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>



                    <!-- Button trigger modal -->
                    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                        Включить просмотр
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                                <div class="modal-body">
                                    {% include 'views/presentation/templates/template.html.twig' %}
                                </div>
                        </div>
                    </div>

                    {#<a class="btn btn-default btn-lg btn-block" href="{{ path('presentations_edit', {'id': presentation.id}) }}">Редактировать</a>#}
                    <p></p>
                    <a class="btn btn-default btn-lg btn-block" href="{{ path('presentations') }}">Вернуться к списку</a>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts '@AppBundle/Resources/public/js/template.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}