{% extends 'nav.html.twig' %}

{% block title %}{{ entity.name }} / Информация о презентации{% endblock %}

{% set page = 'presentation_show' %}

{% block main %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> Информация о презентации </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ entity.name }}</div>
                <div class="panel-body">
                    <p><strong>Название:</strong> {{ entity.name }}</p>
                    <p><strong>Шаблон:</strong> {{ entity.template }}</p>
                    <p><strong>Создатель:</strong> {{ entity.author.username }}</p>
                    <p><strong>Дата создания:</strong> {{ entity.date.format('Y-m-d H:i:s') }}</p>
                    {% include '/presentation/templates/template.html.twig' %}
                    <p></p>
                    <a class="btn btn-default btn-lg btn-block" href="{{ path('presentations') }}">Вернуться к списку</a>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts '@AppBundle/Resources/public/js/template.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}